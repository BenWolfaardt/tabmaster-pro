{
  "manifest_version": 3,
  "name": "Tab Manager Pro",
  "version": "1.0.0",
  "description": "Advanced tab management with groups, sessions, and smart organization",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Manager Pro"
  },
  "web_accessible_resources": [
    {
      "resources": ["index.html", "webapp.html", "extension-handler.js", "webapp-extension.js", "src/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}